<% if (is_post()) { %>
<article class="post">
  <h1>
    <%- page.title %>
  </h1>
  <aside class="meta">
    <time>
      <%- page.date.format("MMMM Do, YYYY"); %>
    </time>
  </aside>
  <% if (page.intro) { %>
    <p class="post-intro">
      <%- page.intro %>
    </p>
  <% } %>
  <%- page.content %>
</article>
<% } %>
